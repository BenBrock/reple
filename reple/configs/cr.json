{
    "run": "{bin_fname}",
    "compile" : "{compiler} {crflags} {user_cargs} -o {bin_fname} {code_fname}",
    "compile_args": {
        "compiler": "crystal build",
        "crflags": "--no-debug",
        "code_suffix": ".cr"
    },
    "template": "{template_begin}\n{prolog_lines}\n{repl_lines}\n{template_end}\n",
    "template_args": {
        "template_begin": "",
        "template_end": "",
        "line_epilogue": ""
    },
    "terminal_opts": {
        "lexer_fn": "CrystalLexer",
        "lexer_class": "pygments.lexers",
        "prolog_char": "$",
        "enclosers": [["do", "end"]]
    }
}
